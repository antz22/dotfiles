# Vs code dark plus theme for Zathura
# link:( https://github.com/dracula/dracula-theme#color-palette )

# Light/Default mode settings:
set notification-error-bg       "#f44747" 
set notification-error-fg       "#d4d4d4" 
set notification-warning-bg     "#dcdcaa" 
set notification-warning-fg     "#1e1e1e" 
set notification-bg             "#1e1e1e" 
set notification-fg             "#569cd6" 

set completion-bg               "#2d2d30" 
set completion-fg               "#d4d4d4" 
set completion-group-bg         "#2d2d30" 
set completion-group-fg         "#d4d4d4" 
set completion-highlight-bg     "#062c45" 
set completion-highlight-fg     "#d4d4d4" 

set index-bg                    "#1e1e1e" 
set index-fg                    "#d4d4d4" 
set index-active-bg             "#569cd6" 
set index-active-fg             "#282a36" 

set inputbar-bg                 "#ffaf00" 
set inputbar-fg                 "#1e1e1e" 
set statusbar-bg                "#0a7aca" 
set statusbar-fg                "#ffffff" 

set highlight-color             "#264f78" 
set highlight-active-color      "#dcdcaa" 

set default-bg                  "#1e1e1e" 
set default-fg                  "#d4d4d4" 

set render-loading              true
set render-loading-fg           "#1e1e1e" 
set render-loading-bg           "#d4d4d4" 

# Recolor mode settings
set recolor-lightcolor          "#1e1e1e" # Background
set recolor-darkcolor           "#d4d4d4" # Foreground

# Startup options
set adjust-open width
set recolor true
